<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="@dimen/market_app_card_width"
    android:layout_height="@dimen/market_app_card_height"
    android:layout_margin="@dimen/market_app_card_margin"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/app_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/dancing_demon"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/app_title"
            style="@style/MarketAppTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            tools:text="Galaxy Invasion"/>

        <TextView
            android:id="@+id/app_publisher"
            style="@style/MarketAppDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            tools:text="RadioShack"/>
<!--
        <TextView
            android:id="@+id/app_author"
            style="@style/MarketAppDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Leo Christopherson"/>
-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/market_star"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/market_star"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/market_star"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/market_star_half"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/market_star_empty"/>
        </LinearLayout>

        <TextView
            android:id="@+id/app_price"
            style="@style/MarketAppPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Free"/>

    </LinearLayout>

</android.support.v7.widget.CardView>