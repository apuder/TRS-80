<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:keyboard="http://schemas.android.com/apk/res/org.puder.trs80"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <org.puder.trs80.Screen
        android:id="@+id/screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <!-- http://www.trs-80.com/wordpress/zaps-patches-pokes-tips/internals/#keyboard13 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <org.puder.trs80.Key
                android:id="@+id/key_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3810"
                keyboard:label="!|1"
                keyboard:mask="2" />

            <org.puder.trs80.Key
                android:id="@+id/key_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3810"
                keyboard:label="&quot;|2"
                keyboard:mask="4" />

            <org.puder.trs80.Key
                android:id="@+id/key_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3810"
                keyboard:label="#|3"
                keyboard:mask="8" />

            <org.puder.trs80.Key
                android:id="@+id/key_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3810"
                keyboard:label="$|4"
                keyboard:mask="16" />

            <org.puder.trs80.Key
                android:id="@+id/key_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3810"
                keyboard:label="%|5"
                keyboard:mask="32" />

            <org.puder.trs80.Key
                android:id="@+id/key_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3810"
                keyboard:label="&amp;|6"
                keyboard:mask="64" />

            <org.puder.trs80.Key
                android:id="@+id/key_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3810"
                keyboard:label="&apos;|7"
                keyboard:mask="128" />

            <org.puder.trs80.Key
                android:id="@+id/key_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3820"
                keyboard:label="(|8"
                keyboard:mask="1" />

            <org.puder.trs80.Key
                android:id="@+id/key_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3820"
                keyboard:label=")|9"
                keyboard:mask="2" />

            <org.puder.trs80.Key
                android:id="@+id/key_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3810"
                keyboard:label="0"
                keyboard:mask="1" />

            <org.puder.trs80.Key
                android:id="@+id/key_COLON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3820"
                keyboard:label="*|:"
                keyboard:mask="4" />

            <org.puder.trs80.Key
                android:id="@+id/key_MINUS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3820"
                keyboard:label="=|-"
                keyboard:mask="32" />

            <org.puder.trs80.Key
                android:id="@+id/key_BREAK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3840"
                keyboard:label="BREAK"
                keyboard:mask="4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <org.puder.trs80.Key
                android:id="@+id/key_UP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3840"
                keyboard:label="UP"
                keyboard:mask="8" />

            <org.puder.trs80.Key
                android:id="@+id/key_Q"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3804"
                keyboard:label="Q"
                keyboard:mask="2" />

            <org.puder.trs80.Key
                android:id="@+id/key_W"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3804"
                keyboard:label="W"
                keyboard:mask="128" />

            <org.puder.trs80.Key
                android:id="@+id/key_E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3801"
                keyboard:label="E"
                keyboard:mask="32" />

            <org.puder.trs80.Key
                android:id="@+id/key_R"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3804"
                keyboard:label="R"
                keyboard:mask="4" />

            <org.puder.trs80.Key
                android:id="@+id/key_T"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3804"
                keyboard:label="T"
                keyboard:mask="16" />

            <org.puder.trs80.Key
                android:id="@+id/key_Y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3808"
                keyboard:label="Y"
                keyboard:mask="2" />

            <org.puder.trs80.Key
                android:id="@+id/key_U"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3804"
                keyboard:label="U"
                keyboard:mask="32" />

            <org.puder.trs80.Key
                android:id="@+id/key_I"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3802"
                keyboard:label="I"
                keyboard:mask="2" />

            <org.puder.trs80.Key
                android:id="@+id/key_O"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3802"
                keyboard:label="O"
                keyboard:mask="128" />

            <org.puder.trs80.Key
                android:id="@+id/key_P"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3804"
                keyboard:label="P"
                keyboard:mask="1" />

            <org.puder.trs80.Key
                android:id="@+id/key_AT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3801"
                keyboard:label="a"
                keyboard:mask="1" />

            <org.puder.trs80.Key
                android:id="@+id/key_LEFT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3840"
                keyboard:label="LEFT"
                keyboard:mask="0x20" />

            <org.puder.trs80.Key
                android:id="@+id/key_RIGHT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3840"
                keyboard:label="RIGHT"
                keyboard:mask="0x40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <org.puder.trs80.Key
                android:id="@+id/key_DOWN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3840"
                keyboard:label="DOWN"
                keyboard:mask="16" />

            <org.puder.trs80.Key
                android:id="@+id/key_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3801"
                keyboard:label="A"
                keyboard:mask="2" />

            <org.puder.trs80.Key
                android:id="@+id/key_S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3804"
                keyboard:label="S"
                keyboard:mask="8" />

            <org.puder.trs80.Key
                android:id="@+id/key_D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3801"
                keyboard:label="D"
                keyboard:mask="16" />

            <org.puder.trs80.Key
                android:id="@+id/key_F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3801"
                keyboard:label="F"
                keyboard:mask="64" />

            <org.puder.trs80.Key
                android:id="@+id/key_G"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3801"
                keyboard:label="G"
                keyboard:mask="128" />

            <org.puder.trs80.Key
                android:id="@+id/key_H"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3802"
                keyboard:label="H"
                keyboard:mask="1" />

            <org.puder.trs80.Key
                android:id="@+id/key_J"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3802"
                keyboard:label="J"
                keyboard:mask="4" />

            <org.puder.trs80.Key
                android:id="@+id/key_K"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3802"
                keyboard:label="K"
                keyboard:mask="8" />

            <org.puder.trs80.Key
                android:id="@+id/key_L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3802"
                keyboard:label="L"
                keyboard:mask="16" />

            <org.puder.trs80.Key
                android:id="@+id/key_SEMICOLON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3820"
                keyboard:label="+|;"
                keyboard:mask="8" />

            <org.puder.trs80.Key
                android:id="@+id/key_ENTER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3840"
                keyboard:label="ENTER"
                keyboard:mask="1"
                keyboard:size="2" />

            <org.puder.trs80.Key
                android:id="@+id/key_CLEAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3840"
                keyboard:label="CLEAR"
                keyboard:mask="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <org.puder.trs80.Key
                android:id="@+id/key_SHIFT1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3880"
                keyboard:label="SHIFT"
                keyboard:mask="1"
                keyboard:size="2" />

            <org.puder.trs80.Key
                android:id="@+id/key_Z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3808"
                keyboard:label="Z"
                keyboard:mask="4" />

            <org.puder.trs80.Key
                android:id="@+id/key_X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3808"
                keyboard:label="X"
                keyboard:mask="1" />

            <org.puder.trs80.Key
                android:id="@+id/key_C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3801"
                keyboard:label="C"
                keyboard:mask="8" />

            <org.puder.trs80.Key
                android:id="@+id/key_V"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3804"
                keyboard:label="V"
                keyboard:mask="64" />

            <org.puder.trs80.Key
                android:id="@+id/key_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3801"
                keyboard:label="B"
                keyboard:mask="4" />

            <org.puder.trs80.Key
                android:id="@+id/key_N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3802"
                keyboard:label="N"
                keyboard:mask="64" />

            <org.puder.trs80.Key
                android:id="@+id/key_M"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3802"
                keyboard:label="M"
                keyboard:mask="32" />

            <org.puder.trs80.Key
                android:id="@+id/key_COMMA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3820"
                keyboard:label="&lt;|,"
                keyboard:mask="16" />

            <org.puder.trs80.Key
                android:id="@+id/key_DOT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3820"
                keyboard:label=">|."
                keyboard:mask="64" />

            <org.puder.trs80.Key
                android:id="@+id/key_SLASH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3820"
                keyboard:label="/"
                keyboard:mask="128" />

            <org.puder.trs80.Key
                android:id="@+id/key_SHIFT2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3880"
                keyboard:label="SHIFT"
                keyboard:mask="1"
                keyboard:size="2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <org.puder.trs80.Key
                android:id="@+id/key_SPACE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                keyboard:address="0x3840"
                keyboard:label=""
                keyboard:mask="128"
                keyboard:size="10" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>