<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="General"
        android:key="conf_general">
        <EditTextPreference
            android:key="conf_name"
            android:title="Name"
            android:summary="Name of the configuration" />
        <ListPreference
            android:entries="@array/conf_trs_model"
            android:title="TRS-80 Model"
            android:summary="The TRS-80 Model that will be emulated"
            android:key="conf_model"
            android:entryValues="@array/conf_trs_model_values" />

        <Preference
            android:title="Disk 1"
            android:summary="File to use for disk 1"
            android:key="conf_disk1" />
        <Preference
            android:title="Disk 2"
            android:summary="File to use for disk 2"
            android:key="conf_disk2" />
        <Preference
            android:title="Disk 3"
            android:summary="File to use for disk 3"
            android:key="conf_disk3" />
        <Preference
            android:title="Disk 4"
            android:summary="File to use for disk 4"
            android:key="conf_disk4" />
        <CheckBoxPreference
            android:title="Mute"
            android:summaryOn="All game sounds will be muted"
            android:summaryOff="Play game sounds"
            android:key="conf_mute_sound" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Portrait Mode"
        android:key="conf_portrait">
        <ListPreference
            android:entries="@array/conf_keyboard_type"
            android:title="Keyboard type"
            android:summary="The keyboard type to be used in portrait"
            android:key="conf_keyboard_portrait"
            android:entryValues="@array/conf_keyboard_type_values" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Landscape Mode"
        android:key="conf_landscape">
        <ListPreference
            android:entries="@array/conf_keyboard_type"
            android:title="Keyboard type"
            android:summary="The keyboard type to be used in landscape"
            android:key="conf_keyboard_landscape"
            android:entryValues="@array/conf_keyboard_type_values" />
    </PreferenceCategory>
</PreferenceScreen>