<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="General"
        android:key="conf_general">
        <EditTextPreference
            android:key="conf_name"
            android:title="Name"
            android:summary="Name of the configuration" />
        <ListPreference
            android:entries="@array/conf_trs_model"
            android:title="TRS-80 Model"
            android:summary="The TRS-80 Model that will be emulated"
            android:key="conf_model"
            android:entryValues="@array/conf_trs_model_values" />

        <Preference
            android:title="Disk 1"
            android:summary="File to use for disk 1"
            android:key="conf_disk1" />
        <Preference
            android:title="Disk 2"
            android:summary="File to use for disk 2"
            android:key="conf_disk2" />
        <Preference
            android:title="Disk 3"
            android:summary="File to use for disk 3"
            android:key="conf_disk3" />
        <Preference
            android:title="Disk 4"
            android:summary="File to use for disk 4"
            android:key="conf_disk4" />
    </PreferenceCategory>
</PreferenceScreen>